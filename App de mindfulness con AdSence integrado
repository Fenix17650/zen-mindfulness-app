    <script>
        // Inicializar anuncios
        (adsbygoogle = window.adsbygoogle || []).push({});
        (adsbygoogle = window.adsbygoogle || []).push({});
        (adsbygoogle = window.adsbygoogle || []).push({});

        let currentExercise = null;
        let exerciseTimer = null;
        let breathingTimer = null;
        let timeRemaining = 300; // 5 minutos
        let isPaused = false;

        const exercises = {
            breathing: {
                title: "Respiraci√≥n Consciente",
                duration: 300,
                instructions: "Sigue el c√≠rculo con tu respiraci√≥n. Inhala cuando crezca, exhala cuando se contraiga."
            },
            meditation: {
                title: "Meditaci√≥n B√°sica",
                duration: 600,
                instructions: "Cierra los ojos y enf√≥cate en tu respiraci√≥n. Observa tus pensamientos sin juzgarlos."
            },
            morning: {
                title: "Relajaci√≥n Matutina",
                duration: 480,
                instructions: "Respira profundamente y visualiza un d√≠a lleno de posibilidades positivas."
            },
            night: {
                title: "Descanso Nocturno",
                duration: 720,
                instructions: "Relaja cada parte de tu cuerpo y deja que tu mente se prepare para el descanso."
            }
        };

        function startExercise(type) {
            currentExercise = exercises[type];
            timeRemaining = currentExercise.duration;
            
            document.getElementById('mainScreen').style.display = 'none';
            document.getElementById('exerciseScreen').classList.add('active');
            document.getElementById('exerciseTitle').textContent = currentExercise.title;
            document.getElementById('instructions').innerHTML = `<p>${currentExercise.instructions}</p>`;
            
            startTimer();
            if (type === 'breathing') {
                startBreathingAnimation();
            }
        }

        function startTimer() {
            exerciseTimer = setInterval(() => {
                if (!isPaused) {
                    timeRemaining--;
                    updateTimerDisplay();
                    
                    if (timeRemaining <= 0) {
                        completeExercise();
                    }
                }
            }, 1000);
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(timeRemaining / 60);
            const seconds = timeRemaining % 60;
            document.getElementById('timer').textContent = 
                `${minutes}:${seconds.toString().padStart(2, '0')}`;
        }

        function startBreathingAnimation() {
            const circle = document.getElementById('breathingCircle');
            const text = document.getElementById('breathingText');
            let isInhaling = true;
            
            breathingTimer = setInterval(() => {
                if (!isPaused) {
                    if (isInhaling) {
                        circle.classList.remove('exhale');
                        circle.classList.add('inhale');
                        text.textContent = 'Inhala...';
                    } else {
                        circle.classList.remove('inhale');
                        circle.classList.add('exhale');
                        text.textContent = 'Exhala...';
                    }
                    isInhaling = !isInhaling;
                }
            }, 4000);
        }

        function pauseExercise() {
            isPaused = true;
        }

        function resumeExercise() {
            isPaused = false;
        }

        function endExercise() {
            clearInterval(exerciseTimer);
            clearInterval(breathingTimer);
            completeExercise();
        }

        function completeExercise() {
            clearInterval(exerciseTimer);
            clearInterval(breathingTimer);
            
            document.getElementById('exerciseScreen').classList.remove('active');
            document.getElementById('completionScreen').classList.add('active');
            
            // Cargar anuncio de completado
            setTimeout(() => {
                (adsbygoogle = window.adsbygoogle || []).push({});
            }, 1000);
        }

        function goHome() {
            document.getElementById('completionScreen').classList.remove('active');
            document.getElementById('mainScreen').style.display = 'block';
            
            // Reset
            const circle = document.getElementById('breathingCircle');
            circle.classList.remove('inhale', 'exhale');
            isPaused = false;
        }

        // Inicializar la aplicaci√≥n
        updateTimerDisplay();
    </script>
